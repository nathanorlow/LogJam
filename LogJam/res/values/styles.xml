<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="StreamTemplate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/stream_text_height</item>
        <item name="android:layout_height">match_parent</item>
        
    </style>
    <style name="StreamButtonTemplate" parent="StreamTemplate">
        <item name="android:text">@string/stream_button</item> 
    </style> 
    <style name="StreamTextTemplate" parent="StreamTemplate">
        <item name="android:text">@string/goal_default</item>
    </style>
    <style name="LeftCenterTemplate">
         <item name="android:layout_height">match_parent</item>
         <item name="android:layout_width">match_parent</item>
         <item name="android:gravity">left|center_vertical</item>
         <item name="android:orientation">horizontal</item> 
    </style>
    
</resources>
