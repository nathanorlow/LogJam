<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <TableLayout
        android:id="@+id/stream_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <TableRow>
            <TextView
                style="@style/StreamTextTemplate"
                android:id="@+id/goal_one" />
            <Button
                style="@style/StreamButtonTemplate"
                android:id="@+id/stream_one" />

            <LinearLayout
                android:id="@+id/row1"
				style="@style/LeftCenterTemplate"
				android:orientation="horizontal">
            </LinearLayout>
        </TableRow>

        <TableRow>
            <TextView
                style="@style/StreamTextTemplate"
                android:id="@+id/goal_two" />
            <Button
                style="@style/StreamButtonTemplate"
                android:id="@+id/stream_two" />

            <LinearLayout
                android:id="@+id/row2"
				style="@style/LeftCenterTemplate"
				android:orientation="horizontal">
            </LinearLayout>
        </TableRow>

        <TableRow>
            <TextView
                style="@style/StreamTextTemplate"
                android:id="@+id/goal_three" />
            <Button
                style="@style/StreamButtonTemplate"
                android:id="@+id/stream_three" />

            <LinearLayout
                android:id="@+id/row3"
				style="@style/LeftCenterTemplate"
				android:orientation="horizontal">
            </LinearLayout>
        </TableRow>

        <TableRow>
            <TextView
                style="@style/StreamTextTemplate"
                android:id="@+id/goal_four" />
            <Button
                style="@style/StreamButtonTemplate"
                android:id="@+id/stream_four" />

            <LinearLayout
                android:id="@+id/row4"
				style="@style/LeftCenterTemplate"
				android:orientation="horizontal" >
            </LinearLayout>
        </TableRow>

        <TableRow>
            <TextView
                style="@style/StreamTextTemplate"
                android:id="@+id/goal_five" />
            <Button
                style="@style/StreamButtonTemplate"
                android:id="@+id/stream_five" />

            <LinearLayout
                android:id="@+id/row5"
				style="@style/LeftCenterTemplate"
				android:orientation="horizontal" >
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
	    android:layout_weight="1"
		>
        
		<ImageView
		    android:id="@+id/current_log_img_id"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:src="@drawable/log3"
		    android:scaleType="center"
		/>
		<ImageView
		    android:layout_width="10dip"
		    android:layout_height="match_parent"
		/>
    </LinearLayout>

</LinearLayout>